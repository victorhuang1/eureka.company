<!DOCTYPE html>
<html>
	<%- include('layouts/header');-%>
	<body class='bg-light'>
		<!-- nav start-->
		<%- include('layouts/navbar');-%>
		<!-- nav end-->
		<!-- banner start-->
		<div class='bg-image position-relative' style="background-image: url(image/overlay-bg.jpg); height: 300px;">
			<div class='position-absolute w-100 h-100 bg-primary' style="opacity: 0.7;"></div>
			<div class='position-absolute w-100 h-100 py-5' style="z-index: 5;">
				<h1 class='text-light text-center display-2'>Blog</h1>
				<nav class='text-light' style='--bs-breadcrumb-divider:">"'>
					<ol class='breadcrumb navOl d-flex justify-content-center'>
						<li class="breadcrumb-item"><a href="/" class='text-light'><b>Home</b></a></li>
						<li class='breadcrumb-item'>Blog</li>
					</ol>
				</nav>
				<h1 class='text-center text-light mt-4'>
					<%= blogpost.title %>
				</h1>
			</div>
		</div>
		<!-- banner end-->
		<!-- content start-->
		<div class='container'>
			<div class="row py-5">
				<div class='col-lg-8 col-12 px-1 mb-4'>
					<!-- conntent-->
					<div class='shadow bg-white p-5 mb-4'>
						<img src="<%= blogpost.image %>" class='img-fluid' />
						<h4 class='mt-3'>Skill development(Programmer) - <%= blogpost.title %></h4>
						<ul class='list-unstyled d-flex border-start border-3 border-primary align-items-center'>
							<li class='d-flex align-items-center ms-2'>
								<svg class='me-1' xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
								  <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
								</svg>
								<a href="#">Victor</a>
							</li>
							<li class='d-flex align-items-center ms-3'>
								<svg class='me-1' xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
								  <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
								  <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.043-.043-7.457-7.457z"/>
								</svg>
								<a href="#"><%= blogpost.tag %></a>
							</li>
							<li class='d-flex align-items-center ms-3'>
								<svg class='me-1' xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-dots-fill" viewBox="0 0 16 16">
								  <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4.414a1 1 0 0 0-.707.293L.854 15.146A.5.5 0 0 1 0 14.793V2zm5 4a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm4 0a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
								</svg>
								<a href="#">10</a>
							</li>
							<li class='d-flex align-items-center ms-3'>
							    <svg class='me-1' xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-date" viewBox="0 0 16 16">
								<path d="M6.445 11.688V6.354h-.633A12.6 12.6 0 0 0 4.5 7.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61h.675zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82h-.684zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23z"/>
								<path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
							  </svg>
							  <a href="#"><%= blogpost.datePosted.toDateString()%></a>
							</li>

						</ul>
						<p class='mb-2 fw-lighter'>
							<%= blogpost.body %>
						</p>
					</div>
					<!-- conntent end-->
					<div class='shadow bg-white p-5 mb-4'>
						<h4 class='border-start border-5 border-primary ps-3'>Comments(9)</h4>
						<div class='d-flex mt-5'>
							<img src="image/zm.png" height="80" />
							<div class='ms-4 w-auto text-break'>
								<h4>Chewbacca</h4>
								<i>19 Sep 2020</i>
								<p class='text-secondary'>Funny</p>
							</div>
						</div>
						<div class='d-flex ps-4 mt-2'>
							<img src="image/80.png" height="80" />
							<div class='ms-4 w-auto text-break'>
								<h4>Victor</h4>
								<i>20 Sep 2020</i>
								<p class='text-secondary'>Keep on studying</p>
							</div>
						</div>
						<div class='d-flex mt-4'>
							<img src="image/t2.png" height="80"  />
							<div class='ms-4 w-auto text-break'>
								<h4>Yoda</h4>
								<i>13 Sep 2020</i>
								<p class='text-secondary'>Thanks for sharing</p>
							</div>
						</div>
					</div>
					<!-- end-->
					<!-- mes -->
					<div class='shadow bg-white p-5'>
						<h4 class='border-start border-5 border-primary ps-3'>Comment</h4>
						<div class='row mt-3'>
							<div class='col-12 col-md-6 mb-4 mb-md-0'>
								<input class='form-control rounded-0' placeholder="Name*" />
							</div>
							<div class='col-12 col-md-6'>
								<input class='form-control rounded-0' placeholder="Email*" />
							</div>
							<div class='col-12 mt-4'>
								<input class='form-control rounded-0' placeholder="WebSite" />
							</div>
							<div class='col-12 mt-4'>
								<div class='form-floating'>
									<textarea placeholder="123" class='form-control rounded-0' style='height: 120px;' id='contentnode'></textarea>
									<label for='contentnode' class='text-secondary'>Content</label>
								</div>
								<button class='btn btn-secondary rounded-0 mt-4'>Submit</button>
							</div>
						</div>
					</div>
					<!-- mes-->
				</div>
				<div class='col-12 col-lg-4 px-1'>
					
					<div class='shadow p-5 bg-white ms-lg-4 mb-4'>
						<h4 class='border-start border-5 border-primary ps-3'>Search</h4>
						<div class='input-group mt-3'>
							<input class='form-control rounded-0' placeholder="Search articles" />
							<button class='btn btn-primary rounded-0 d-flex align-items-center justify-content-center' data-bs-toggle="modal" data-bs-target="#exampleModal">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
								  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
								</svg>
							</button>
						</div>
					</div>
					<div class='shadow p-5 bg-white ms-lg-4 content-box mb-4'>
						<h4 class='border-start border-5 border-primary ps-3'>Recent articles</h4>
						<ul class='mt-3'>
							<% for(var i=0;i<2;i++){ %>
							<li>
								<a href="#">
									<%= blogpost.title %>
								</a>
							</li>
							<% } %>
							<!-- <li class='mt-2'>
								<a href="#">
									What exactly is a big front end?
								</a>
							</li>
							<li  class='mt-2'>
								<a href="#">
									All things can be JS in the legend?
								</a>
							</li>
							<li  class='mt-2'>
								<a href="#">
									Explore GET/SET methods hidden in objects?
								</a>
							</li> -->
						</ul>
					</div>
					<div class='shadow p-5 bg-white ms-lg-4 content-box'>
						<h4 class='border-start border-5 border-primary ps-3 mb-3'>Tag</h4>
						<a href="#" class='badge bg-primary rounded-pill p-2 text-light mb-2'>Web</a>
						<a href="#" class='badge bg-primary rounded-pill p-2 text-light mb-2'>JavaScript</a>
						<a href="#" class='badge bg-primary rounded-pill p-2 text-light mb-2'>HTML</a>
						<a href="#" class='badge bg-primary rounded-pill p-2 text-light mb-2'>CSS</a>
						<a href="#" class='badge bg-danger rounded-pill p-2 text-light mb-2'>JAVA</a>
					</div>
				</div>
			</div>
		</div>
		<!-- content end-->

		<!-- search modal start-->
		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Search Result</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<!-- <div class="modal-body">
					<div class='container'>
						<ul>
							<li>
								<div>Title</div>
					            <div>Body</div>
					            <div>Tag,Date</div>
							</li>
						</ul>
					</div>
				</div> -->
				<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
				</div>
			</div>
			</div>
		</div>
		<!-- search modal end-->

		<!-- footer start -->
		<%- include('layouts/footer');-%>
		<!-- footer end -->
	</body>
</html>